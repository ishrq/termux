[include]
    path = ~/.config/git/config.local

[core]
    pager = delta
    editor = nvim
    whitespace = warn

[format]
    signOff = yes

[gpg]
    program = gpg2
    format = openpgp

[init]
    defaultBranch = main

[commit]
    verbose = true
    gpgsign = true

[pull]
    rebase = true

[push]
    gpgSign = if-asked
    default = simple
    autoSetupRemote = true
    followTags = yes

[merge]
    conflictstyle = diff3

[help]
    autoCorrect = prompt

[color]
    ui = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # n/N move between diff sections
    light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[diff]
    colorMoved = default
